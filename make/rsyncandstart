#!/bin/bash

if [[ ${DEPLOYDIR} != *"/etc/antbuddy"* ]];then
    echo "This script is dangerous. Please ln -s your deploy dir '$DEPLOYDIR' to under /etc/antbuddy folder"
    exit
fi

rsync -ravz --delete $WORKINGDIR/. deploy:$DEPLOYDIR/
# rsync -ravz --delete . deploy:$DEPLOYDIR/
ssh deploy 'bash -c "export NVM_DIR=\"\$HOME/.nvm\" && \. \"\$NVM_DIR/nvm.sh\" && nvm use '$NODEVERSION' && cd '$DEPLOYDIR' && '$RELOADCOMMAND'"; sudo nginx -t && sudo service nginx reload' && ls -la
